<div id="title">
  <h2>
    <%= "Search Results for '#{@facade.query}'" %>
  </h2>
  <h3>
    <%= "Total Hits: #{@facade.total_hits}" %>
  </h3>
<div>
<br/>
<br/>

<section id="query-results">
  <% unless @facade %>
    <h3> No Food Found </h3>
  <% else %>
    <% @facade.matching_foods.each do |food| %>
      <p><%= "UPC: #{food.upc}" %></p>
      <p><%= "Description: #{food.description}" %></p>
      <p><%= "Brand Owner: #{food.brand_owner}" %></p>
      <p><%= "Ingredients: #{food.ingredients}" %></p>
      <br/>
    <% end %>
  <% end %>
</section>